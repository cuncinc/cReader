<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:theme="@style/FullScreen"
    tools:context="com.cc.creader.SplashActivity">

    <ImageView
        android:id="@+id/imageview_splash"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="#001001"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1234567890\ncom.cc.creader.SplashActivity"
        android:textColor="#DB6958"
        android:textSize="30sp"/>
</FrameLayout>
