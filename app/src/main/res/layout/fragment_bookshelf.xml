<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/personinfo_left_margin"
        android:layout_marginRight="@dimen/personinfo_left_margin"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/icon_search"
                android:scaleType="centerInside"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="搜索书名"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imageView_add_book"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/icon_import"
            android:scaleType="centerInside"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textview_bookcase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTimLoginButton"
        android:text="书架"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/button_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"/>

</LinearLayout>