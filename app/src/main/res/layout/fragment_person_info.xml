<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/colorDuokanSpace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="@dimen/personinfo_left_font_size"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/textview_online_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/personinfo_left_font_size"/>
        </LinearLayout>
    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:alpha="0.6"
          android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/personinfo_list_distance"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textSize="@dimen/personinfo_left_font_size"
                android:layout_marginLeft="@dimen/personinfo_left_margin"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/textview_online_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personinfo_right_margin"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.6"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="@dimen/personinfo_left_margin"
            android:layout_marginRight="@dimen/personinfo_left_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/personinfo_list_distance"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:textSize="@dimen/personinfo_left_font_size"
                android:layout_marginLeft="@dimen/personinfo_left_margin"
                android:textColor="#000000"/>
            <TextView
                android:contentDescription="邮箱号码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.6"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="@dimen/personinfo_left_margin"
            android:layout_marginRight="@dimen/personinfo_left_margin"/>

        <LinearLayout
            android:contentDescription="手机"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personinfo_list_distance"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机"
                android:textSize="@dimen/personinfo_left_font_size"
                android:layout_marginLeft="@dimen/personinfo_left_margin"
                android:textColor="#000000"/>
            <TextView
                android:contentDescription="手机号码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.6"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="@dimen/personinfo_left_margin"
            android:layout_marginRight="@dimen/personinfo_left_margin"/>

        <LinearLayout
            android:contentDescription="签名"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personinfo_list_distance"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签名"
                android:textSize="@dimen/personinfo_left_font_size"
                android:layout_marginLeft="@dimen/personinfo_left_margin"
                android:textColor="#000000"/>
            <TextView
                android:contentDescription="签名内容"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>

    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:alpha="0.6"
          android:background="@android:color/darker_gray"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/personinfo_space_distance"/>
    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:alpha="0.6"
          android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/layout_modifypass"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personinfo_list_distance"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="@dimen/personinfo_left_font_size"
            android:layout_marginLeft="@dimen/personinfo_left_margin"
            android:textColor="#000000"/>
    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:alpha="0.6"
          android:background="@android:color/darker_gray"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/personinfo_space_distance"/>
    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:alpha="0.6"
          android:background="@android:color/darker_gray"/>
    
    <LinearLayout
        android:id="@+id/layout_logoff"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personinfo_list_distance"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出账号"
            android:textColor="#E70303"
            android:textSize="16sp"/>
    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:alpha="0.6"
          android:background="@android:color/darker_gray"/>

</LinearLayout>