<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/colorDuokanSpace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:contentDescription="头像"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:contentDescription="头像"
            android:layout_gravity="center_horizontal"
            android:id="@+id/image_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:contentDescription="为了内部横排"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:contentDescription="ID这两个字"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="@dimen/personinfo_left_font_size"
                android:textColor="#000000"/>
            <TextView
                android:contentDescription="ID数字"
                android:id="@+id/textview_online_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/personinfo_left_font_size"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:contentDescription="线长"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:contentDescription="个人信息"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:contentDescription="账号"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personinfo_list_distance"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textSize="@dimen/personinfo_left_font_size"
                android:layout_marginLeft="@dimen/personinfo_left_margin"
                android:textColor="#000000"/>
            <TextView
                android:contentDescription="账号号码"
                android:id="@+id/textview_online_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personinfo_right_margin"/>
        </LinearLayout>

        <ImageView
            android:contentDescription="线短"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:contentDescription="邮箱"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personinfo_list_distance"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:textSize="@dimen/personinfo_left_font_size"
                android:layout_marginLeft="@dimen/personinfo_left_margin"
                android:textColor="#000000"/>
            <TextView
                android:contentDescription="邮箱号码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <ImageView
            android:contentDescription="短"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:contentDescription="手机"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personinfo_list_distance"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机"
                android:textSize="@dimen/personinfo_left_font_size"
                android:layout_marginLeft="@dimen/personinfo_left_margin"
                android:textColor="#000000"/>
            <TextView
                android:contentDescription="手机号码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            </LinearLayout>

        <ImageView
            android:contentDescription="线短"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:contentDescription="签名"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personinfo_list_distance"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签名"
                android:textSize="@dimen/personinfo_left_font_size"
                android:layout_marginLeft="@dimen/personinfo_left_margin"
                android:textColor="#000000"/>
            <TextView
                android:contentDescription="签名内容"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>

    </LinearLayout>

    <ImageView
        android:contentDescription="线长"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/personinfo_space_distance"/>

    <LinearLayout
        android:contentDescription="修改密码"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personinfo_list_distance"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="@dimen/personinfo_left_font_size"
            android:layout_marginLeft="@dimen/personinfo_left_margin"
            android:textColor="#000000"/>
    </LinearLayout>

    <ImageView
        android:contentDescription="线长"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/personinfo_space_distance"/>
    <ImageView
        android:contentDescription="线长"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:id="@+id/layout_logoff"
        android:contentDescription="退出账号"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personinfo_list_distance"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出账号"
            android:textColor="#E70303"
            android:textSize="16sp"
            />
    </LinearLayout>

    <ImageView
        android:contentDescription="线长"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>